.title_image {
    width: 100%;
    height: 350rpx;
}

.body_padding {
    padding: 70rpx 28rpx;
}

.flex_row {
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
}

.flex_column {
    display: flex;
    flex-flow: column nowrap;
}

.title_font {
    font-size: 32rpx;
    font-weight: 700;
    color: #333;
    padding-right: 10rpx;
}

.small_title_font {
    font-size: 22rpx;
    color: #999;
}

.small_image {
    width: 78rpx;
    height: 84rpx;
}

.two {
    margin-top: 40rpx;
    margin-bottom: 50rpx;
    justify-content: space-between;
}

.two_style {
    justify-content: space-between;
    width: 338rpx;
    padding: 34rpx 32rpx;
    background-color: #333;
    border-radius: 6rpx;
}

.two_font {
    font-size: 26rpx;
    color: #fff;
}

.small_two_font {
    font-size: 22rpx;
    color: #999;
}

.table {
    flex-wrap: wrap;
    border: 1rpx solid #f2f2f2;
    border-radius: 6rpx;
}

.three_style {
    width: 347rpx;
    justify-content: space-between;
    padding: 35rpx 34rpx;
    background-color: #fff;
}

.three_font {
    font-size: 22rpx;
    color: #333;
}

.small_three_font {
    font-size: 20rpx;
    color: #999;
}

.icon_font {
    font-size: 50rpx;
    color: #cdcdcd;
}

.icon_bgc {
    background-color: #333;
}

.three_border_bottom {
    border-bottom: 1rpx solid #f2f2f2;
}

.three_border_right {
    border-right: 1rpx solid #f2f2f2;
}

.image-tx {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    padding: 17rpx 66rpx 10rpx 66rpx;
}

.image-tx-big {
    width: 107rpx !important;
    height: 107rpx !important;
}

.image-tx>image {
    width: 66rpx;
    height: 66rpx;
    background-color: #aaa;
    border-radius: 50%;
}

.eva_pf {
    position: relative;
    display: flex;
    flex-flow: column;
    justify-content: center;
    padding: 0 40rpx;
    width: 100%;
    height: 125px;
    background-color: #333;
    border-radius: 3px;
    top: 24px;
}

.eva_pf:before {
    content: "";
    position: absolute;
    top: -10px;
    right: 50%;
    transform: translateX(50%);
    width: 0;
    height: 0;
    border-left: 10px solid transparent;
    border-bottom: 10px solid #333;
    border-right: 10px solid transparent;
}

.eva_pf_title {
    display: flex;
    flex-flow: row nowrap;
    justify-content: center;
    align-items: center;
    margin-bottom: 20rpx;
}

.eva_pf_title>text {
    font-size: 28rpx;
    color: #fff;
    margin-right: 10rpx;
}

.eva_pf_title>view {
    display: flex;
    align-items: center;
}

.eva_pf_title>view>text {
    font-size: 20rpx;
    color: #fbdaa2;
    margin-right: 6rpx;
}

.eva_pf>text {
    font-size: 24rpx;
    line-height: 40rpx;
    color: #999;
}

.logo {
    width: 273rpx;
    height: 57rpx;
    margin: 36rpx auto;
}

.margin_top {
    margin-top: 70rpx;
}

.img_margin_top {
    margin-top: 56rpx;
}