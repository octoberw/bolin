<!-- pages/rimClean/rimClean.wxml -->
<view class="title-border">
    <view class="input" scroll-top="0">
        <text class="iconfont iconicon_sousuo"></text>
        <input class="" value="" type="input" placeholder="请输入地址"></input>
    </view>
    <map id="" class="map" longitude="{{longitude}}" latitude="{{latitude}}" scale="{{scale}}" markers="{{markers}}" bindregionchange="" bindtap="" bindupdated=""></map>
    <view class="scroll-view-hn">
        <view class="clean-zb">
            <image class="clean-image" src="../../image/image_ay3.png" mode="aspectFit|aspectFill|widthFix"></image>
            <view class="clean-right">
                <view class="clean">
                    <text class="clean-name">李阿姨</text>
                    <text class="clean-style">金牌保洁人</text>
                </view>
                <view class="clean">
                    <text class="iconfont iconicon_weizhi clean-dw"></text>
                    <text class="clean-hp">距离1.6km | 好评率:96</text>
                </view>
            </view>
            <view class="clean-yy">
                <view class="">
                    <text class="clean-rmb">￥</text>
                    <text class="clean-y">15</text>
                    <text class="">/小时</text>
                </view>
                <text class="clean-yy-btn" bindtap="gotoAppointmentView">预约</text>
                <text class="clean-yysl">5人已预约</text>
            </view>
        </view>
    </view>
    <view class="scroll-view-hn">
        <view class="clean-zb">
            <image class="clean-image" src="../../image/image_ay2.png" mode="aspectFit|aspectFill|widthFix"></image>
            <view class="clean-right">
                <view class="clean">
                    <text class="clean-name">李阿姨</text>
                    <text class="clean-style">金牌保洁人</text>
                </view>
                <view class="clean">
                    <text class="iconfont iconicon_weizhi clean-dw"></text>
                    <text class="clean-hp">距离1.6km | 好评率:96</text>
                </view>
            </view>
            <view class="clean-yy">
                <view class="">
                    <text class="clean-rmb">￥</text>
                    <text class="clean-y">15</text>
                    <text class="">/小时</text>
                </view>
                <text class="clean-yy-btn" bindtap="gotoAppointmentView">预约</text>
                <text class="clean-yysl">5人已预约</text>
            </view>
        </view>
    </view>
    <view class="dibuImage">
        <image class="" src="../../image/img_dibulianxi.png" ></image>
    </view>
</view>