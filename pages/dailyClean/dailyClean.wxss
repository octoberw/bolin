.eva_pf {
    position: relative;
    display: flex;
    flex-flow: column;
    justify-content: center;
    padding: 0 40rpx;
    width: 100%;
    height: 125px;
    background-color: #333;
    border-radius: 3px;
    top: 24px;
}

.eva_pf:before {
    content: "";
    position: absolute;
    top: -10px;
    right: 50%;
    transform: translateX(50%);
    width: 0;
    height: 0;
    border-left: 10px solid transparent;
    border-bottom: 10px solid #333;
    border-right: 10px solid transparent;
}

.eva_pf_title {
    display: flex;
    flex-flow: row nowrap;
    justify-content: center;
    align-items: center;
    margin-bottom: 20rpx;
}

.eva_pf_title>text {
    font-size: 28rpx;
    color: #fff;
    margin-right: 10rpx;
}

.eva_pf_title>view {
    display: flex;
    align-items: center;
}

.eva_pf_title>view>text {
    font-size: 20rpx;
    color: #fbdaa2;
    margin-right: 6rpx;
}

.eva_pf>text {
    font-size: 24rpx;
    line-height: 40rpx;
    color: #999;
}

