/* pages/dailyClean/dailyClean.wxss */
.map {
    width: 100%;
    height: 800rpx;
}

.input {
    display: flex;
    width: 100%;
    background-color: #fff;
    flex-flow: row nowrap;
    box-sizing: border-box;
    align-items: center;
    padding: 16rpx;
    margin-bottom: 5rpx;
}

.input>text {
    font-size: 32rpx;
    color: #999;
    margin: 0 16rpx;
}

.input>input {
    flex: 1;
    font-size: 26rpx;
    color: #999;
}

/* 强制不换行 */
.scroll-view {
    width: 100%;
    white-space: nowrap;
    margin-top: 15rpx;
}

.scroll-view-vv {
    box-sizing: border-box;
}

/* scroll-view下不能用flex布局,用外嵌套一个view的方法解决 */
.scroll-view-vv>view {
    display: inline-block;
}

.scroll-view-vv>view:first-child {
    margin-left: 8rpx;
}

.scroll-view-vv>view:last-child {
    margin-right: 28rpx;
}

.clean-zb {
    position: relative;
    display: flex;
    width: 490rpx;
    height: 182rpx;
    margin-left: 20rpx;
    flex-flow: row nowrap;
    padding: 20rpx;
    color: #fff;
    border-radius: 6rpx;
    background-color: #333;
}

.scroll-view-hn-ve {
