@import '../../styles/iconfont.wxss';

.bgc {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 99;
    background-color: rgba(0, 0, 0, .2);
}

.bgc-val {
    display: flex;
    flex-flow: column nowrap;
    background-color: #fff;
    padding: 42rpx 32rpx;
}

.com-title {
    font-size: 26rpx;
    color: #333;
    font-weight: 700;
}

.com-xx {
    text-align: center;
    font-size: 46rpx;
    color: #fbdaa2;
}

.com-xx>text {
    padding: 0 6rpx;
}

.com-fw {
    display: flex;
    flex-flow: row wrap;
    /* justify-content: space-between; */
}

.com-fw>text {
    font-size: 20rpx;
    color: #999;
    padding: 18rpx 26rpx;
    border-radius: 6rpx;
    border: 1rpx solid #ddd;
    margin-right: 18rpx;
    margin-top: 20rpx;
}

.click-fw {
    background-color: #333;
    color: #fff !important;
    border: 0;
}

.com-val {
    position: relative;
    box-sizing: border-box;
    background-color: #f2f2f2;
    border-radius: 6rpx;
    border: 1rpx solid #ddd;
    width: 100%;
    height: 346rpx;
    padding: 20rpx 22rpx;
}

.com-val textarea {
    width: 100%;
    height: 70rpx;
    font-size: 20rpx;
    color: #999;
}

.com-img {
    position: absolute;
    left: 26rpx;
    bottom: 26rpx;
    width: 120rpx;
    height: 120rpx;
    border: 1rpx dotted #ddd;
    margin: 0;
    background-color: #eaeaea;
}

.com-img>text {
    font-size: 47rpx;
    color: #999;
}

.com-foot {
    position: fixed;
    z-index: 999;
    bottom: 0;
    width: 100%;
    font-size: 32rpx;
    color: #fbdaa2;
    text-align: center;
    padding: 34rpx 0;
    background-color: #333;
}