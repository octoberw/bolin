/* pages/confirmOrder/confirmOrder.wxss */
.ps_bg {
    width: 530rpx;
    margin: 110rpx auto;
}

.ps_head {
    position: relative;
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    background-color: #333;
    margin: 0 auto;
}

.ps_head text {
    position: absolute;
    font-size: 104rpx;
    top: 44rpx;
    left: 48rpx;
    color: #fbdaa2;
}

.ps_fw {
    margin-top: 30rpx;
    display: flex;
    flex-flow: column nowrap;
}

.title_sec {
    font-size: 22rpx;
    color: #999;
    text-align: center;
    line-height: 32rpx;
}

.title {
    text-align: center;
    font-size: 32rpx;
    font-weight: 700;
    color: #333;
    margin-bottom: 26rpx;
}

.ps_foot {
    padding-top: 160rpx;
    display: flex;
    flex-flow: column nowrap;
}

.ps_foot>text {
    padding: 26rpx 176rpx;
    background-color: #333;
    border-radius: 6rpx;
    font-size: 28rpx;
    color: #fbdaa2;
    margin-bottom: 20rpx;
    text-align: center;
}

.ps_foot>text:last-child {
    background-color: #ddd;
    color: #fff;
}

.flex_column {
    display: flex;
    flex-flow: column nowrap;
    align-items: center;
    justify-content: center
}