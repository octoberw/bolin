/* components/selectTime/selectTime.wxss */
/* pages/selectTime/selectTime.wxss */
.time_bgc {
    position: absolute;
    z-index: 999;
    width: 100%;
    height: 774px;
    background-color: rgba(127, 127, 127, 0.2);
    top: 0;
}

.time_sel_bgc {
    z-index: 9999;
    position: fixed;
    bottom: 100rpx;
    width: 100%;
    background-color: #fff;
}

.time_sel_sjd {
    padding: 26rpx;
    border-bottom: 1rpx solid #ddd;
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    justify-content: space-between;
}

.time_sel_sjd text:first-child {
    font-size: 24rpx;
    color: #333;
}

.time_sel_sjd text:last-child {
    font-size: 24rpx;
    color: #999;
}

.time_flex {
    display: flex;
}

.time_sel_day {
    float: left;
    overflow: hidden;
    background-color: #f2f2f2;
}

.time_sel_day text {
    font-size: 24rpx;
    color: #333;
    padding: 24rpx 20rpx;
    display: flex;
    flex-flow: column;
}

.time_sel_day text:first-child {
    background-color: #fff;
}

.time_sel_right {
    flex: 1;
}

.time_sel_right_val {
    padding: 0 0 0 32rpx
}

.time_sel_right_val>view>text {
    font-size: 24rpx;
    font-weight: 700;
    color: #333;
    margin-bottom: 20rpx;
}

.time_sel_right_val>view {
    padding-bottom: 48rpx;
}

.time_sel_right_val>view>view {
    width: 100%;
    height: 120rpx;
}

.time_sel_right_val>view>view>text {
    float: left;
    padding: 16rpx 12rpx;
    border: 1rpx solid #dfdfdf;
    border-radius: 6rpx;
    font-size: 20rpx;
    color: #999;
    margin: 0 16rpx 20rpx 0;
}

.time_sel_right_val>view>view>text.bg {
    background-color: #333;
    color: #fbdaa2;
    border: 1rpx solid #333;
}

.foot {
    position: fixed;
    width: 100%;
    line-height: 100rpx;
    font-size: 32rpx;
    text-align: center;
    background: #333;
    color: #fbdaa2;
    z-index: 999;
}

.huise {
    background-color: #f0f0f0;
}

.padding-bottom {
    padding: 0 !important;
}