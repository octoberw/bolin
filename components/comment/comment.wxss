/* components/Comment/Comment.wxss */
@import '../../styles/iconfont.wxss';

.bgc {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 99;
    background-color: rgba(0, 0, 0, .2);
}

.bgc-val {
    position: fixed;
    display: flex;
    z-index: 999;
    flex-flow: column nowrap;
    bottom: 110rpx;
    background-color: #fff;
    padding: 56rpx 35rpx;
}

.com-title {
    font-size: 26rpx;
    color: #ddd;
    text-align: center;
}

.com-xx {
    text-align: center;
    font-size: 46rpx;
    color: #999
}

.color_fbdaa2 {
    color: #fbdaa2;
}

.com-xx>text {
    padding: 0 6rpx;
}

.com-fw {
    width: 80%;
    display: flex;
    flex-flow: row wrap;
    justify-content: center;
    margin: 0 auto;
    margin-top: 13rpx;
}

.com-fw>text {
    font-size: 20rpx;
    color: #999;
    padding: 14rpx 20rpx;
    border-radius: 6rpx;
    border: 1rpx solid #ddd;
    margin: 7rpx 5rpx;
}

.click-fw {
    background-color: #333;
    color: #fbdaa2 !important;
    border: 0;
}

.com-val {
    box-sizing: border-box;
    background-color: #f2f2f2;
    border-radius: 6rpx;
    border: 1rpx solid #ddd;
    margin-top: 40rpx;
    width: 100%;
    height: 230rpx;
    padding: 20rpx 22rpx;
}

.com-val textarea {
    width: 100%;
    height: 70rpx;
    font-size: 20rpx;
    color: #999;
}

.com-img {
    width: 120rpx;
    height: 120rpx;
    border: 1rpx dotted #ddd;
    margin: 0;
    background-color: #eaeaea;
}

.com-img>text {
    font-size: 47rpx;
    color: #999;
}

.com-foot {
    position: fixed;
    z-index: 999;
    bottom: 0;
    left: 0;
    width: 100%;
    font-size: 32rpx;
    color: #fbdaa2;
    text-align: center;
    padding: 14rpx 0;
    background-color: #333;
    border-radius: 0;
}

.image {
    width: 118rpx;
    height: 118rpx;
    border-radius: 6rpx;
    overflow: hidden;
    margin-right: 15rpx;
}

.flex_row {
    display: flex;
}